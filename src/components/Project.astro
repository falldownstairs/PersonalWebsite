---
interface Props {
	title: string;
	body: string;
	href1: string;
	href2: string;
	picture: string;
	tech: string;
	demo: string;
}



const { href1,href2, title, body, picture, tech, demo} = Astro.props;

---

<li class="link-card">
	<div class = "page">
		<img class = "cardIMG" src = {picture} />
		<h2>
			{title}
		</h2>
		<p>
			{body}
		</p>
		<p class = "libtext">{tech}</p>
		<div class = "links">
			<a href={href1} target="_blank"><img class = "GH" src = "/GitHub.png"/></a>
			<a href={href2} target="_blank"><p class="demo">{demo}</p></a>
		</div>

	</div>
</li>
<style>
	.links{
		flex-direction: row;
  		display: flex;
  		text-align: left;
	}
	.demo{
		padding-left: 5px;
		color: white;
		text-decoration: none;

	}
	a:hover, a:visited, a:link, a:active
	{
		text-decoration: none;
	}
	.page{
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	.GH{
		width: 15px;
		height: 15px;
		filter: brightness(0) invert(1);
		color: rgb(255, 255, 255);
	}
	.lib{
		font-size: 14px;
	}
	.libtext{
		font-size: 15px;
		color:#c8c8c8;
		padding-right: 7px;
	}
	.demotext{
		font-size: 10px;
		padding-left: 7.5px;
	}
	.techlist{
		flex-direction: row;
		display: flex;
		text-align: left;
		
	}
	.link-card {
		list-style: none;
		display: flex; 
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.tech{
		font-size: 13px;
		background-color: #2e323b;
		padding-left: 5px;
		padding-right: 5px;
		margin-right: 7.5px;
	}
	h2 {
		margin: 0;
		font-size: 24px;
		flex-direction: row;
		display: flex;
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		font-size: 11px;
	}
	.link-card:is(:hover, :focus-within) {
		background-image: var(--accent-gradient);
	}
	.cardIMG{
		height: 185px ;
		width: inherit;
		outline-style: solid;
		outline-width: 3px;
		outline-color: rgba(255, 255, 255, 0.1);
		object-fit: cover;
	}

</style>
