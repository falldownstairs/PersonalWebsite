---
interface Props {
	title: string;
	body: string;
	picture: string;
	tech: string;
}



const {title, body, picture, tech} = Astro.props;

---

<li class="link-card">
	<div class = "page">
		<img class = "cardIMG" src = {picture} />
		<h2>
			{title}
		</h2>
		<p>
			{body}
		</p>
		<p class = "libtext">{tech}</p>
		<slot name = "links"></slot>


	</div>
</li>
<style>
	.links{
		flex-direction: row;
  		display: flex;
  		text-align: left;
	}

	.page{
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	.libtext{
		font-size: 15px;
		color:#c8c8c8;
		padding-right: 7px;
	}

	.link-card {
		list-style: none;
		display: flex; 
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	h2 {
		margin: 0;
		font-size: 24px;
		flex-direction: row;
		display: flex;
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		font-size: 11px;
	}
	.cardIMG{
		height: 185px ;
		width: inherit;
		outline-style: solid;
		outline-width: 3px;
		outline-color: rgba(255, 255, 255, 0.1);
		object-fit: cover;
	}

</style>
